<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/codigoTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/nombreTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/telefonoTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/holo_blue_dark" />
    <TextView android:id="@+id/emailTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/visitadoTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>